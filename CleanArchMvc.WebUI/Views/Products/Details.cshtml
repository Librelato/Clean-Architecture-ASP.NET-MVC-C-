@using CleanArchMvc.Application.DTOs;
@model ProductDTO;

@{
    ViewData["Title"] = "Edit Product";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this?</h4>

<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m=>m.Name)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m=>m.Description)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Image)</dt>
        <dd class="col-sm-10">
            
            @if (ViewBag.ImageExist) {
                <img src="~/images/@Model.Image", class="rounded-circle" height="300" with="300" asp-append-version=true />
            } else {
                <img src="~/images/notfound.png" , class="rounded-circle" height="300" with="300" asp-append-version=true />
            }
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Price)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m=>m.Price)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Stock)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m=>m.Stock)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m=>m.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m=>m.Category.Name)</dd>

    </dl>
</div>   

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index">Back to List</a>
</div>